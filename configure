apt-get -y install xorg-dev libglu1-mesa-dev cmake g++ libfreeimage-dev libglew-dev libvlc-dev libvlccore-dev libglm-dev make unzip wget

#wget GLFW3 Source

wget 'http://sourceforge.net/projects/glfw/files/glfw/3.0.4/glfw-3.0.4.zip'
unzip glfw-3.0.4.zip
cd glfw-3.0.4
cmake -DBUILD_SHARED_LIBS=ON -G "Unix Makefiles"
make
make install
cp /usr/local/lib/libglfw* /usr/lib/
test -d /usr/include/GLFW || mkdir -p /usr/include/GLFW
cp /usr/local/include/GLFW/* /usr/include/GLFW/
